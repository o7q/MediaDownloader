{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "media-downloader",
  "version": "5.0.0",
  "identifier": "com.media-downloader.app",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MediaDownloader",
        "width": 500,
        "height": 250,
        "minWidth": 400,
        "minHeight": 200,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}